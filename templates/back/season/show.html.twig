{% extends 'back/season/season_template.html.twig' %}

{% block bodyBack %}
    <h2>Season</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Série</th>
                <td>{{ season.movie.title }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ season.number}}</td>
            </tr>
            <tr>
                <th>Nombre d'épisodes</th>
                <td>{{ season.episodesNumber }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_season_index') }}" class="btn btn-primary">Retour a liste des seasons</a>

    <a href="{{ path('back_season_edit', {'id': season.id}) }}" class="btn btn-warning">Editer</a>

    {{ include('back/season/_delete_form.html.twig') }}

{% endblock %}
