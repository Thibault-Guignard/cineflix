{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

    

{% block body %}

<div class="container">
    <h1>Liste des films</h1>
        <a href="{{ path('app_back_movie_new') }}" class="btn btn-primary me-2">Ajouter un film</a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Année de sortie</th>
                <th>Durée</th>
                <th>Affiche</th>
                <th>Note</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.title }}</td>
                <td>{{ movie.releaseDate ? movie.releaseDate|date('Y') : '' }}</td>
                <td>{{ movie.duration }} min</td>
                <td> <img src="{{ movie.poster }}" height="50"></td>
                <td>{{ movie.rating }}</td>
                <td>{{ movie.type }}</td>
                <td>
                    <a href="{{ path('app_back_movie_show', {'id': movie.id}) }}">show</a>
                    <a href="{{ path('app_back_movie_edit', {'id': movie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
