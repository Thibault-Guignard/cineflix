{% extends 'back/user/user_template.html.twig' %}

{% block body_back %}

    <h2>Liste des utilisateurs</h2>
    <a href="{{ path('back_user_new') }}" class="btn btn-primary me-2">Ajouter un utilisateur</a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('back_user_show', {'id': user.id}) }}" class="btn btn-primary">Voire</a>
                    <a href="{{ path('back_user_edit', {'id': user.id}) }}" class="btn btn-warning">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
